{
  "id": "org.taisei_project.Taisei",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "20.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "taisei",
  "rename-icon": "taisei",
  "rename-desktop-file": "taisei.desktop",
  "finish-args": [
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=ipc",
    "--device=all"
  ],
  "modules": [
    {
      "name": "libzip",
      "buildsystem": "cmake-ninja",
      "cleanup": [ "/bin", "/share", "/include", "/lib/pkgconfig" ],
      "config-opts": [
        "-DENABLE_COMMONCRYPTO=OFF",
        "-DENABLE_GNUTLS=OFF",
        "-DENABLE_OPENSSL=OFF"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/nih-at/libzip/archive/v1.7.3.tar.gz",
          "sha256": "c0a086901dfc8bda0fb8695f2d3c8050ed140b7899536b9348bcc72b47b2f307"
        }
      ]
    },
    {
      "name": "taisei",
      "buildsystem": "meson",
      "config-opts": [
        "--wrap-mode=nodownload",
        "-Ddocs=false",
        "-Dstrip=false"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.taisei_project.Taisei.appdata.xml"
        },
        {
          "type": "archive",
          "url": "https://github.com/taisei-project/taisei/releases/download/v1.3.1/taisei-v1.3.1.tar.xz",
          "sha256": "86583a3a710093e63014a5ae6b68251a069cb25ada06c6f8d734f85f31adc985"
        }
      ],
      "post-install": [
        "install -Dm644 ../org.taisei_project.Taisei.appdata.xml /app/share/appdata/org.taisei_project.Taisei.appdata.xml"
      ]
    }
  ]
}
